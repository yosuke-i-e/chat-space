%div.sidebar
  %div.user
    %p.user__name
      = current_user.name
    %p.icon
      = link_to new_group_path do
        %i.fa.fa-edit.fa-lg
      = link_to edit_user_registration_path do
        %i.fa.fa-cog.fa-lg
  - current_user.groups.each do |group|
    = link_to group_messages_path(group.id) do
      %div.group-list
        %p.group-list__name
          = group.name
        %p.group-list__top-message
          = group.show_last_message


